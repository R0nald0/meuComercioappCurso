<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="scroll"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adicionar_postagem"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/t_tulo"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edtComTitulo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/t_tulo"
            android:gravity="center"
            android:inputType="text"/>



        <TextView
            android:id="@+id/edtComDataPost"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/imgvComPost"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"

            />
        <Button
            android:id="@+id/btnPostImg"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adcionar imagem"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/idaddPostNota"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:hint="Nota sobre o Post" />


        <Button
            android:id="@+id/edtComSalvarPost"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"/>

    </LinearLayout>




</ScrollView>
