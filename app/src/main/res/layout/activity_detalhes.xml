<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toobar"
        layout="@layout/barraconf"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/txRecebido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/romelio"
            android:layout_marginTop="5dp"
            />

           <ImageView
               android:layout_marginTop="12dp"
               android:id="@+id/imgPerfil"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:elevation="6dp"
                />


        <TextView
            android:id="@+id/txNomeUsuário"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/txNotanome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/txNomeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txComentario"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtComentar"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Deixe um Comentário"
            android:textAlignment="center"
            android:textColor="@color/black"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/btnComentar"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Comentar"
                />
            <Button
                android:id="@+id/btnVoltar"
                android:layout_marginLeft="30dp"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:text="Voltar"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>